<%- include("../../partials/header") %>

    <h1>
        <%= title %>
    </h1>
    <h3>
        <%= skill.skill %>
    </h3>
    <h4>
        Description:
    </h4>
    <p>
        <%= skill.desc %>
    </p>
    <h4>
        Proficiency:
    </h4>
    <p>
        <%= skill.rank %>/10
    </p>

    <form action="/skills/edit/<%= skill.id %>" method="POST" autocomplete="off">
        <div>
            <label for="rank"> Edit Proficiency X/10: </label>
            <input id="rank" type="number" name="rank" min="1" max="10" required>
            <button type="submit">Edit</button>
        </div>
    </form>

    <%- include("../../partials/footer") %>