<%- include("../partials/header") %>

    <h1>
        <%= title %>
    </h1>

    <h3>
        <%= skill.skill %>
    </h3>

    <form action="/skills/<%= skill.id %>?_method=PUT" method="POST" autocomplete="off">

        <h4>Description: </h4>
        <textarea id="skillDesc" type="text" name="desc" rows="5" ><%= skill.desc %></textarea>

        <h4> Proficiency X/10: </h4>
        <input type="number" name="rank" min="1" max="10" value="<%= skill.rank %>" required>

        <button class="confirmBtn" type="submit" >Save</button>

    </form>


    <%- include("../partials/footer") %>