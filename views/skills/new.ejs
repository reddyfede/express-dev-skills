<%- include("../partials/header") %>
    <h1>
        <%= title %>
    </h1>

    <h3>Fill out the form to add a new skill.</h3>

    <form action="/skills" method="POST" autocomplete="off">

        <h4>Name: </h4>
        <input id="skillName" type="text" name="skill" placeholder="Name" required>

        <h4>Description: </h4>
        <textarea id="skillDesc" type="text" name="desc" rows="5" placeholder="Description"></textarea>

        <h4>Proficiency X/10: </h4>
        <input type="number" name="rank" min="1" max="10" placeholder="0" required>

        <button class="confirmBtn" type="submit">Add Skill</button>

    </form>

    <%- include("../partials/footer") %>